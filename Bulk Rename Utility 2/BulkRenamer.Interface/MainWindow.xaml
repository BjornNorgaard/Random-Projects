<Window x:Class="BulkRenamer.Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BulkRenamer.Interface"
        mc:Ignorable="d"
        Title="BulkRenamer v2" Height="327" Width="294">
    <Grid>
        <StackPanel Margin="5,5,5,5">

            <Button x:Name="button" Content="Søren! Click me to select folder!" Click="Button_OnClick"/>
            <Label x:Name="label" Content="1. Input someting to help me identify the files:"/>
            <TextBox x:Name="StringContainedInFileName" Height="23" TextWrapping="Wrap" Text="Something contained in old name goes here..." GotFocus="StringContainedInFileName_OnGotFocus" />
            <Label x:Name="label1" Content="2. Type new name below:"/>
            <TextBox x:Name="NewNameTextBox" Height="23" TextWrapping="Wrap" Text="New name goes here..." GotFocus="TextBox_OnGotFocus"/>
            <Button x:Name="button1" Content="Click me to rename files" Click="Button1_OnClick"/>

        </StackPanel>
    </Grid>
</Window>
